{{> head}}
    {{> selectScreen}}

    <div id="site-game">
        <canvas id="game"></canvas>
        <div id="site-hud">
            <div class="site-chat">
                <div class="chat-messages" id="chatMessages">
                    <p>Chat with other players</p>
                </div>
                <div class="write-chat">
                    <input type="text" id="chat-message" placeholder="Leave a message">
                </div>
            </div>
            <div class="leaderboard">
                <h1>leaderboard</h1>
                <div class="scores" id="scores">
                </div>
            </div>
            <div id="bullets">
                <p id="charger">4/4 </p>
            </div>
        </div>
    </div>
    
    <script src="../dist/loadcharacters.bundle.js"></script>
    <script src="../dist/online.bundle.js"></script>
</body>
</html>